<%= form_for(@data, url: url_for(action: 'edit_post', databuku_id: @data.id), multipart: true ) do |f| %>
<div class="form-group">
  <label for="">Judul Buku</label>
  <%= f.text_field :buku_judul, {class: 'form-control'} %>
</div>

<div class="form-group">
  <label for="">Penulis</label>
  <%= f.text_field :buku_penulis, {class: 'form-control'} %>
</div>

<div class="form-group">
  <label for="">Penerbit</label>
  <%= f.text_field :buku_penerbit, {class: 'form-control'} %>
</div>

<div class="form-group">
  <label for="">Tahun Terbit</label>
  <%= f.text_field :buku_thnterbit, {class: 'form-control'} %>
</div>

<div class="form-group">
  <input type="submit" value="Perbarui Data" class="btn btn-primary">
</div>
<% end %>
