<%= form_for(@data, url: url_for(action: 'baru_post'), multipart: true ) do |f| %>
<div class="form-group">
  <div class="row">
    <%= f.label 'Judul Buku', { class: 'col-md-2' } %>
    <div class="col-md-8">
      <%= f.text_field :peminjaman_buku, { class: 'form-control', placeholder: '' } %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <%= f.label 'Nama Peminjam', { class: 'col-md-2' } %>
    <div class="col-md-8">
        <%= f.text_field :peminjaman_nama, { class: 'form-control', placeholder: '' } %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <%= f.label 'Tanggal Pinjaman', { class: 'col-md-2' } %>
    <div class="col-md-8">
        <%= f.date_field :peminjaman_tglpinjam, { class: 'form-control', placeholder: '' } %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <%= f.label 'Tanggal Kembali', { class: 'col-md-2' } %>
    <div class="col-md-8">
        <%= f.date_field :peminjaman_tglkembali, { class: 'form-control', placeholder: '' } %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <%= f.label 'Status', { class: 'col-md-2' } %>
    <div class="col-md-8">
        <%= f.text_field :peminjaman_status, { class: 'form-control', placeholder: '' } %>
    </div>
  </div>
</div>


<div class="form-group">
  <input type="submit" value="Masukan" class="btn btn-primary">
</div>
<% end %>
