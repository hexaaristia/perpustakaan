<div class="table-responsive">


  <table class="table table-striped table-bordered">
    <a href="/sp/peminjaman/baru" class="btn btn-primary">Baru</a>
    <thead>
      <tr>
        <th style="text-align:center">Aksi</th>
        <th style="text-align:center">#</th>
        <th style="text-align:center">Judul Buku</th>
        <th style="text-align:center">Nama Peminjam</th>
        <th style="text-align:center">Tanggal Pinjam</th>
        <th style="text-align:center">Tanggal Kembali</th>
        <th style="text-align:center">Status</th>


      </tr>
    </thead>
    <tbody>

      <% @datas.each do |f| %>
      <tr>
        <td>
          <a href="<%= url_for action: 'view', peminjaman_id: f.id %>" class="btn btn-small btn-default">View</a>
          <a href="<%= url_for action: 'edit', peminjaman_id: f.id %>" class="btn btn-small btn-success">Edit</a>
          <%= link_to 'hapus',url_for(action: :hapus, peminjaman_id: f.id), method: :delete, data: {confirm: "Apakah Anda yakin ingin menghapus data tersebut?"}, class: 'btn btn-small btn-danger' %>
        </td>
        <td><%= f.id %></td>
        <td><%= f.peminjaman_buku %></td>
        <td><%= f.peminjaman_nama %></td>
        <td><%= f.peminjaman_tglpinjam %></td>
        <td><%= f.peminjaman_tglkembali %></td>
        <td><%= f.peminjaman_status %></td>
      </tr>
      <% end %>


    </tbody>
  </table>
</div>
