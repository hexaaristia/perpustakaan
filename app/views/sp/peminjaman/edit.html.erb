<%= form_for(@data, url: url_for(action: 'edit_post', peminjaman_id: @data.id), multipart: true ) do |f| %>
<div class="form-group">
  <label for="">Judul Buku</label>
  <%= f.text_field :peminjaman_buku, {class: 'form-control'} %>
</div>

<div class="form-group">
  <label for="">Nama Peminjam</label>
  <%= f.text_field :peminjaman_nama, {class: 'form-control'} %>
</div>

<div class="form-group">
  <label for="">Tanggal Pinjam</label>
  <%= f.date_field :peminjaman_tglpinjam, {class: 'form-control'} %>
</div>

<div class="form-group">
  <label for="">Tanggal Kembali</label>
  <%= f.date_field :peminjaman_tglkembali, {class: 'form-control'} %>
</div>

<div class="form-group">
  <label for="">Peminjaman</label>
  <%= f.text_field :peminjaman_status, {class: 'form-control'} %>
</div>

<div class="form-group">
  <input type="submit" value="Perbarui Data" class="btn btn-primary">
</div>
<% end %>
