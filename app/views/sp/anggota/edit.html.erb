<%= form_for(@data, url: url_for(action: 'edit_post', anggota_id: @data.id), multipart: true ) do |f| %>
<div class="form-group">
  <label for="">Nama</label>
  <%= f.text_field :anggota_nama, {class: 'form-control'} %>
</div>

<div class="form-group">
  <label for="">Tanggal Lahir</label>
  <%= f.text_field :anggota_tgllahir, {class: 'form-control'} %>
</div>

<div class="form-group">
  <label for="">Alamat</label>
  <%= f.text_field :anggota_alamat, {class: 'form-control'} %>
</div>

<div class="form-group">
  <label for="">Jenis Kelamin</label>
  <%= f.text_field :anggota_jk, {class: 'form-control'} %>
</div>

<div class="form-group">
  <input type="submit" value="Perbarui Data" class="btn btn-primary">
</div>
<% end %>
