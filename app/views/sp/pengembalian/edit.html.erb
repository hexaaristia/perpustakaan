<%= form_for(@data, url: url_for(action: 'edit_post', pengembalian_id: @data.id), multipart: true ) do |f| %>
<div class="form-group">
  <label for="">ID Peminjaman</label>
  <%= f.text_field :pengembalian_idpinjam, {class: 'form-control'} %>
</div>

<div class="form-group">
  <label for="">Tanggal Kembali</label>
  <%= f.date_field :pengembalian_tanggal, {class: 'form-control'} %>
</div>

<div class="form-group">
  <label for="">Denda</label>
  <%= f.text_field :pengembalian_denda, {class: 'form-control'} %>
</div>



<div class="form-group">
  <input type="submit" value="Perbarui Data" class="btn btn-primary">
</div>
<% end %>
